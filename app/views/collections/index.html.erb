<div class="container mt-4">
  <h1 class="text-center mb-4">Collection</h1>
  <% @games.each do |game| %>
    <div class="row mb-4 justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to game.name, game_path(game) %></h5>
            <p class="card-text"><strong>Number of Players:</strong> <%= game.number_of_players %> | <strong>Rate:</strong> <%= game.rate %></p>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <%= will_paginate @games %>
</div>